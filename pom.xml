<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>edu.mayo.kmdp</groupId>
    <artifactId>kmdp-bom</artifactId>
    <version>[3.0.0,3.0.1]</version>
  </parent>

  <packaging>pom</packaging>

  <artifactId>demo-terminology-service-parent</artifactId>
  <groupId>org.omg.demo</groupId>
  <version>1.0.0</version>

  <properties>
    <apiVersion>1.0.0</apiVersion>
    <apiFile>openapi/v2/org/omg/demo/${apiVersion}/DemoTerminology.yml</apiFile>

    <kmdp.archetype.version.resolved>${edu.mayo.kmdp:kmdp-api-facade-generator:jar.version}</kmdp.archetype.version.resolved>

  </properties>

  <name>API4KP :: Demo :: Terminology Server</name>

  <dependencies>
    <dependency>
      <groupId>edu.mayo.kmdp</groupId>
      <artifactId>kmdp-openapi-spring-service-archetype</artifactId>
      <version>${kmdp.archetype.version}</version>
      <optional>true</optional>
    </dependency>
  </dependencies>

  <dependencyManagement>
    <dependencies>
      <dependency>
        <groupId>org.omg.demo</groupId>
        <artifactId>demo-terminology-service-model</artifactId>
        <version>${project.version}</version>
      </dependency>
    </dependencies>
  </dependencyManagement>

  <build>

    <pluginManagement>
      <plugins>

        <plugin>
          <groupId>io.swagger</groupId>
          <artifactId>swagger-codegen-maven-plugin</artifactId>
          <configuration>
            <typeMappings>
              <!-- Reusable Datatypes -->
              <typeMapping>Pointer=org.omg.spec.api4kp._1_0.identifiers.Pointer</typeMapping>
              <typeMapping>ConceptIdentifier=org.omg.spec.api4kp._1_0.identifiers.ConceptIdentifier</typeMapping>
            </typeMappings>
            <inputSpec>${project.build.outputDirectory}/${apiFile}</inputSpec>
            <generateModels>false</generateModels>
            <generateApiTests>false</generateApiTests>
            <generateModelTests>false</generateModelTests>
            <modelPackage>${model.package}</modelPackage>
            <configOptions>
              <dateLibrary>java8</dateLibrary>
            </configOptions>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>

  <profiles>
    <profile>
      <id>normal</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <modules>
        <module>demo-terminology-service-api</module>
        <module>demo-terminology-service-impl</module>
      </modules>
    </profile>

    <profile>
      <id>refresh-stubs</id>
      <activation>
        <activeByDefault>false</activeByDefault>
      </activation>
      <build>
        <plugins>

          <plugin>

            <groupId>edu.mayo.kmdp</groupId>
            <artifactId>kmdp-configurable-archetype-plugin</artifactId>

            <configuration>
              <archetypeCatalog>local</archetypeCatalog>
              <archetypeArtifactId>kmdp-openapi-spring-service-archetype</archetypeArtifactId>
              <archetypeGroupId>edu.mayo.kmdp</archetypeGroupId>
              <archetypeVersion>3.0.1</archetypeVersion>
              <interactiveMode>false</interactiveMode>
              <preserveRootPOM>true</preserveRootPOM>
            </configuration>

            <inherited>false</inherited>

            <executions>
              <execution>
                <id>gen-spe</id>
                <goals>
                  <goal>generate</goal>
                </goals>
                <phase>initialize</phase>
                <configuration>
                  <propertyFile>properties/demoTerminology.properties</propertyFile>
                </configuration>
              </execution>
            </executions>

          </plugin>
        </plugins>
      </build>
    </profile>
  </profiles>

</project>
